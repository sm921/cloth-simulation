{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceRoot}/dist/**/*"
            ]
        },
        {
            "type": "pwa-chrome",
            "name": "browser",
            "request": "launch",
            "url": "http://localhost:5500/public/${relativeFileDirname}.html"
        }
    ]
}